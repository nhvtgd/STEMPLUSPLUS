<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AllProjectDisplayActivity" >

    <mit.edu.stemplusplus.helper.MyHorizontalLayout
        android:id="@+id/myphoto_all_project_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    </mit.edu.stemplusplus.helper.MyHorizontalLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <GridView
            android:id="@+id/gridview_all_project_display"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:horizontalSpacing="10dp"
            android:numColumns="2"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbars="vertical"
            android:verticalScrollbarPosition="right"
            android:verticalSpacing="10dp" >
        </GridView>

        <Button
            android:id="@+id/add_project_all_project_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/button_marginB"
            android:layout_marginLeft="@dimen/button_marginL"
            android:layout_marginRight="@dimen/button_marginR"
            android:layout_marginTop="@dimen/button_marginT"
            android:background="@drawable/custom_button_blue"
            android:text="@string/add_project_all_project_display"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textSize="@dimen/small_button_text_size" />
    </LinearLayout>

</LinearLayout>