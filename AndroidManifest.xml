<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mit.edu.stemplusplus"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CACHE" />

    <user-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="mit.edu.stemplusplus.CustomCameraActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="mit.edu.stemplusplus.ProjectActivity"
            android:label="@string/title_activity_project" >
        </activity>
        <activity
            android:name="mit.edu.stemplusplus.CustomizedGallery"
            android:label="@string/title_activity_menu_screen"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="mit.edu.stemplusplus.ImagePreview"
            android:label="@string/title_activity_menu_screen" >
        </activity>
        <activity
            android:name="mit.edu.stemplusplus.MenuScreen"
            android:label="@string/title_activity_menu_screen" >
        </activity>
        <activity
            android:name="mit.edu.stemplusplus.PreviewDemo"
            android:label="@string/title_activity_preview_demo" >
        </activity>
        <activity
            android:name="mit.edu.stemplusplus.ProjectDescription"
            android:label="@string/title_activity_project_description" >
        </activity>
        <activity
            android:name="mit.edu.stemplusplus.StoreNewProject"
            android:label="@string/title_activity_store_project" >
        </activity>
        <activity
            android:name="mit.edu.stemplusplus.commitMessageActivity"
            android:label="@string/title_activity_commit_message"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="mit.edu.stemplusplus.AllProjectDisplayActivity"
            android:label="@string/title_activity_all_project_display" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="mit.edu.stemplusplus.SignInActivity"
            android:label="@string/title_activity_signin" >
        </activity>
        <activity
            android:name="mit.edu.stemplusplus.RegisterActivity"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name="mit.edu.stemplusplus.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="mit.edu.stemplusplus.UserProfileActivity"
            android:label="@string/title_activity_user_profile" >
        </activity>
    </application>

</manifest>