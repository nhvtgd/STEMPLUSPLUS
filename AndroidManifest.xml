<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mit.edu.stemplusplus"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="mit.edu.stemplusplus.CustomCameraActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="mit.edu.stemplusplus.CustomizedGallery"
            android:label="@string/title_activity_menu_screen" >
        </activity>
        <activity
            android:name="mit.edu.stemplusplus.ImagePreview"
            android:label="@string/title_activity_menu_screen" >
        </activity>
        <activity
            android:name="commit.edu.stemplusplus.MenuScreen"
            android:label="@string/title_activity_menu_screen" >
        </activity>
        <activity
            android:name="mit.edu.stemplusplus.PreviewDemo"
            android:label="@string/title_activity_preview_demo" >
        </activity>
        <activity
            android:name="mit.edu.stemplusplus.SignInActivity"
            android:label="@string/title_activity_signin"
            android:parentActivityName="mit.edu.stemplusplus.StemPlusPlus"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mit.edu.stemplusplus.StemPlusPlus" />
        </activity>
        <activity
            android:name="mit.edu.stemplusplus.RegisterActivity"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name="mit.edu.stemplusplus.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
    </application>

</manifest>